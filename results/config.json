{
  "model": {
    "type": "mlp",
    "layers": [
      64,
      64,
      64
    ],
    "dropout": 0.3,
    "residual": true,
    "embed_dim": 32
  },
  "loss": {
    "margin": 1.0,
    "type": "triplet_margin",
    "temperature": 0.1
  },
  "training": {
    "batch_size": 64,
    "epochs": 1,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "scheduler": "cosine",
    "warmup_epochs": 2,
    "eval_every": 10,
    "save_every": 20
  },
  "data": {
    "train_path": "dataset/",
    "test_path": "raw_dt/rawdataset/",
    "features": [
      "PW(\u00b5s)",
      "Azimuth(\u00ba)",
      "Elevation(\u00ba)",
      "Power(dBm)",
      "Freq(MHz)"
    ],
    "label_col": "Name"
  },
  "system": {
    "gpus": 1,
    "num_workers": 4,
    "seed": 42,
    "output_dir": "results/"
  },
  "evaluation": {
    "eval_only": false,
    "model_path": null
  }
}